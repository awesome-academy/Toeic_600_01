<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LessonTitle" parent="TextAppearance.AppCompat.Large"/>

    <style name="LessonDescription" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="RatingBar" parent="Base.Widget.AppCompat.RatingBar" >
        <item name="colorControlNormal">@color/material_orange_300</item>
        <item name="colorControlActivated">@color/material_orange_300</item>
    </style>

</resources>
